@model ABS_LMS.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div class="row loginpage">
    <div class="col-sm-6 col-sm-offset-2">
        @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
        @Html.AntiForgeryToken()
        <div class="row">
            <h1>Log In</h1>
        </div>
        if (ViewContext.ViewData.ModelState.Any(x => x.Key == ""))
        {
        @Html.ValidationSummary(true, null, new { @class = "row alert alert-warning" })
        }
        <div class="row">
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName)
            @Html.Label(" ", new { @class = "blanklabel" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "pull-left alert alert-warning " })
            <div class="row">
            </div>
            @Html.LabelFor(m => m.Password, new { @class = "conpass" })
            @Html.PasswordFor(m => m.Password)
            @Html.Label(" ", new { @class = "blanklabel" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "pull-left alert alert-warning" })
        </div>
        <div class="row log-in-actions">
            @Html.ActionLink("Forgotten Password?", "ForgotPassword")
            <button type="submit">Log in</button>
        </div>
        }
    </div>
  
</div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                    <script>
                        $(document).ready(function () {
                            $('.log-out').hide();
                        });
                    </script>
                }
