@model ABS_LMS.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="row setpassword">
    <div class="col-sm-6 col-sm-offset-2">

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
        @Html.AntiForgeryToken()
        <div class="row">
            <h1>Set Password</h1>
        </div>
        <p>Please enter your new security details:</p>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        @Html.HiddenFor(m => m.UserName)
        <div class="row">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "pull-left alert alert-warning marginset" })

            <div class="row">
            </div>
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "conpass"})
            @Html.PasswordFor(m => m.ConfirmPassword)
            @Html.Label("&nbsp;", new { @class = "blanklabel" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "pull-left alert alert-warning" })

        </div>
        <input type="submit" value="Save" style="border-radius: 0" />
